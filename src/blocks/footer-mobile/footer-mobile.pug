mixin footer-mobile
  footer.footer-mobile 
    .container
      .footer-mobile-inner
        .footer__logo 
          a(href="#") 
            img.logo(src="./../assets/images/logo.png", alt="logo")
        .footer__copy_item.footer-mobile__copy_item 
          span.footer__copy-text Copyright © 2018 Toxin отель. Все права защищены.
        .footer__copy_item.social-wrapper 
          a.footer__copy_link-social(href="#") 
            img.twitter(src="./../assets/images/icons/twitter.svg", alt="twitter")
          a.footer__copy_link-social(href="#") 
            img.twitter(src="./../assets/images/icons/fb.svg", alt="fb")
          a.footer__copy_link-social(href="#") 
            img.twitter(src="./../assets/images/icons/inst.svg", alt="inst")
        