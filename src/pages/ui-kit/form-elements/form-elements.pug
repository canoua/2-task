doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title form-elements
    link(rel="stylesheet", href="./../../default.scss")
    link(href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet")
    link(rel="stylesheet", href="form-elements.scss")
  body 
    
    .elements 
      img.elements__logo(src="images/ui-logo.svg", alt="ui-kit-logo")
      .container.elements-inner-1
        .column 
          .text-field-default.elements__item 
            .elements__item_header
              h3.h3 Text Field
              span.elements__item_state Default
            input.card__input(type="text" placeholder="Email")
          .text-field-hover.elements__item 
            .elements__item_header
              h3.h3 Text Field
              span.elements__item_state Hover / Focus
            input.card__input.card__input-hover(type="text" placeholder="This is pretty awesome")
          .dropdown.elements__item 
            .elements__item_header
              h3.h3 Dropdown
            .card__input-wrapper 
              .card__input-dropdown.card__input-dropdown-pre-default Сколько гостей 
              span.material-icons.material-icons-expand expand_more
          .masked-text-field.elements__item 
            .elements__item_header
              h3.h3 masked text field
            input.card__input.card__input-masked(type="text" placeholder="ДД.ММ.ГГГГ")
          .date-dropdown-wrapper 
            .date-dropwown.elements__item.elements__item-box
              .elements__item_header
                h3.h3 date Dropdown
              .card__input-wrapper
                .card__input-date-dropdown ДД.ММ.ГГГГ
                span.material-icons.material-icons-expand expand_more
            .date-dropdown.elements__item.elements__item-box 
              .elements__item_header
                h3.h3 date Dropdown
              .card__input-wrapper
                .card__input-date-dropdown 19.08.2019
                span.material-icons.material-icons-expand expand_more
          .filter-date-dropdown.elements__item 
            .elements__item_header
              h3.h3 filter date dropdown
            .card__input-wrapper
              .card__input-dropdown.card__input-filter-date 19 авг - 23 авг
              span.material-icons.material-icons-expand expand_more
          .subscription-text-field.elements__item 
            .elements__item_header
              h3.h3 subscription text field
            .footer__input-wrapper 
              input.footer__box_item-input(type="text" placeholder="Email")
              button.footer__button-input 
                img(src="img/arrow_forward.svg", alt="arrow")
          
        .column 
          .checkbox-buttons.elements__item 
            .checkbox-buttons__header.elements__item_header
              h3.h3 Checkbox Buttons
            ul.checkbox__list 
              li.checkbox__list_item 
                input(type="checkbox").checkbox__list_input#smoking
                label(for="smoking").checkbox__list_label Можно курить
              li.checkbox__list_item  
                input(type="checkbox").checkbox__list_input#pets
                label(for="pets").checkbox__list_label Можно с питомцами
              li.checkbox__list_item  
                input(type="checkbox").checkbox__list_input#guests
                label(for="guests").checkbox__list_label Можно пригласить гостей (до 10 человек)
          .elements__item 
            .elements__item_header
              h3.h3 Radio Buttons
            .radiobutton-wrapper 
              .radiobutton__item 
                input.radiobutton__item_input.custom-radio(type="radio" id="man" name = "pol" checked)
                label.radiobutton__item_label(for="man") Мужчина
              .radiobutton__item  
                input.radiobutton__item_input.custom-radio(type="radio" id="woman" name = "pol")
                label.radiobutton__item_label(for="woman") Женщина
          .elements__item 
            .elements__item_header
              h3.h3 Toggle
            input.card__input(type="text" placeholder="Email")
          .elements__item 
            .elements__item_header
              h3.h3 like button
            input.card__input(type="text" placeholder="Email")
          .elements__item 
            .elements__item_header
              h3.h3 rate button
            .stars-ratings-wrapper 
              .stars-ratings 
                span.material-icons.material-icons-star star
                span.material-icons.material-icons-star star
                span.material-icons.material-icons-star star
                span.material-icons.material-icons-star star
                span.material-icons.material-icons-star star_border
              .stars-ratings 
                span.material-icons.material-icons-star star
                span.material-icons.material-icons-star star
                span.material-icons.material-icons-star star
                span.material-icons.material-icons-star star
                span.material-icons.material-icons-star star
          
        .column 1
      
      .container.elements-inner-2
        .column 
          .dropdown-default.elements__item 
            .elements__item_header
              h3.h3 dropdown
              span.elements__item_state Default
            .card__input-wrapper
              .card__input-dropdown.card__input-filter-date 2 спальни, 2 кровати...
              span.material-icons.material-icons-expand expand_more

          .dropdown-expanded.elements__item 
            .elements__item_header.elements__item_header-expanded
              h3.h3 dropdown
              span.elements__item_state expanded
            .card__input-wrapper_expanded-shadow 
              .card__input-wrapper.card__input-wrapper-expanded
                .card__input-dropdown.card__input-filter-date 2 спальни, 2 кровати...
                span.material-icons.material-icons-expand expand_more
              .elements__item_content
                ul.dropdown-list 
                  li.dropdown-list__item 
                    .dropdown-list__item_name спальни
                    .dropdown-list__count 
                      .dropdown-list__count_minus -
                      .dropdown-list__count_number 2
                      .dropdown-list__count_plus +
                  li.dropdown-list__item 
                    .dropdown-list__item_name кровати
                    .dropdown-list__count 
                      .dropdown-list__count_minus -
                      .dropdown-list__count_number 2
                      .dropdown-list__count_plus +
                  li.dropdown-list__item 
                    .dropdown-list__item_name ванные комнаты
                    .dropdown-list__count 
                      .dropdown-list__count_minus.unactive-element -
                      .dropdown-list__count_number 0
                      .dropdown-list__count_plus +
          
          .checkbox.elements__item
            .checkbox__header.elements__item_header
              h3.h3 expandable checkbox list
              span.material-icons.material-icons-expand expand_more

          .expandable-checkbox-list.checkbox.elements__item
            .checkbox__header.elements__item_header
              h3.h3 expandable checkbox list
              span.material-icons.material-icons-expand.material-icons-expand-reverse expand_more
            ul.checkbox__list 
              li.checkbox__list_item 
                input(type="checkbox").checkbox__list_input#breakfast
                label(for="breakfast").checkbox__list_label Завтрак
              li.checkbox__list_item  
                input(type="checkbox").checkbox__list_input#desk
                label(for="desk").checkbox__list_label Письменный стол
              li.checkbox__list_item  
                input(type="checkbox").checkbox__list_input#chair-for-feeding
                label(for="chair-for-feeding").checkbox__list_label Стул для кормления
              li.checkbox__list_item  
                input(type="checkbox").checkbox__list_input#crib
                label(for="crib").checkbox__list_label Кроватка
              li.checkbox__list_item  
                input(type="checkbox").checkbox__list_input#television
                label(for="television").checkbox__list_label Телевизор
              li.checkbox__list_item  
                input(type="checkbox").checkbox__list_input#shampoo
                label(for="shampoo").checkbox__list_label Шампунь
               
          .elements__item
            .information__item 
              img.information__icon(src="img/icons/insert_emoticon.png", alt="icon")
              .information__item-inner 
                .information__title Комфорт
                .information__text Шумопоглощающие стены
            .information__item 
              img.information__icon(src="img/icons/location_city.png", alt="icon")
              .information__item-inner
                .information__title Удобство
                .information__text Окно в каждой из спален

