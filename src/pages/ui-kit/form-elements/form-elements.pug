doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title form-elements
    link(rel="stylesheet", href="./../../default.scss")
    link(href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet")
    link(rel="stylesheet", href="form-elements.scss")
  body 
    
    .elements 
      img.elements__logo(src="images/ui-logo.svg", alt="ui-kit-logo")
      .container.elements-inner-1
        .column 
          .elements__item 
            .elements__item_header
              h3.h3 Text Field
              span.elements__item_state Default
            input.card__input(type="text" placeholder="Email")
          .elements__item 
            .elements__item_header
              h3.h3 Text Field
              span.elements__item_state Hover / Focus
            input.card__input.card__input-hover(type="text" placeholder="This is pretty awesome")
          .elements__item 
            .elements__item_header
              h3.h3 Dropdown
            .card__input-wrapper 
              .card__input-dropdown.card__input-dropdown-pre-default Сколько гостей 
              span.material-icons.material-icons-expand expand_more
          .elements__item 
            .elements__item_header
              h3.h3 masked text field
            input.card__input.card__input-masked(type="text" placeholder="ДД.ММ.ГГГГ")
          .date-dropdown-wrapper 
            .elements__item.elements__item-box
              .elements__item_header
                h3.h3 date Dropdown
              .card__input-wrapper
                .card__input-date-dropdown ДД.ММ.ГГГГ
                span.material-icons.material-icons-expand expand_more
            .elements__item.form-elements__item-box 
              .elements__item_header
                h3.h3 date Dropdown
              .card__input-wrapper
                .card__input-date-dropdown 19.08.2019
                span.material-icons.material-icons-expand expand_more
          .elements__item 
            .elements__item_header
              h3.h3 filter date dropdown
            .card__input-wrapper
              input.card__input-dropdown.card__input-filter-date(type="text" placeholder="19 авг - 23 авг")
              span.material-icons.material-icons-expand expand_more
          .elements__item 
            .elements__item_header
              h3.h3 subscription text field
            .footer__input-wrapper 
              input.footer__box_item-input(type="text" placeholder="Email")
              button.footer__button-input 
                img(src="img/arrow_forward.svg", alt="arrow")
          
        .column 
          .elements__item 
            .elements__item_header
              h3.h3 Checkbox Buttons
            input.card__input(type="text" placeholder="Email")
          .elements__item 
            .elements__item_header
              h3.h3 Radio Buttons
            .radiobutton-wrapper 
              .radiobutton__item 
                input.radiobutton__item_input.custom-radio(type="radio" id="man" name = "pol" checked)
                label.radiobutton__item_label(for="man") Мужчина
              .radiobutton__item  
                input.radiobutton__item_input.custom-radio(type="radio" id="woman" name = "pol")
                label.radiobutton__item_label(for="woman") Женщина
          .elements__item 
            .elements__item_header
              h3.h3 Toggle
            input.card__input(type="text" placeholder="Email")
          .elements__item 
            .elements__item_header
              h3.h3 like button
            input.card__input(type="text" placeholder="Email")
          .elements__item 
            .elements__item_header
              h3.h3 rate button
            .stars-ratings-wrapper 
              .stars-ratings 
                span.material-icons.material-icons-star star
                span.material-icons.material-icons-star star
                span.material-icons.material-icons-star star
                span.material-icons.material-icons-star star
                span.material-icons.material-icons-star star_border
              .stars-ratings 
                span.material-icons.material-icons-star star
                span.material-icons.material-icons-star star
                span.material-icons.material-icons-star star
                span.material-icons.material-icons-star star
                span.material-icons.material-icons-star star
          
        .column 1
      
      .container.elements-inner-2
        .column 
          .elements__item 
            .elements__item_header
              h3.h3 dropdown
              span.elements__item_state Default
            .card__input-wrapper
              .card__input-dropdown.card__input-filter-date 2 спальни, 2 кровати...
              span.material-icons.material-icons-expand expand_more

          .elements__item 
            .elements__item_header.elements__item_header-expanded
              h3.h3 dropdown
              span.elements__item_state expanded
            .card__input-wrapper_expanded-shadow 
              .card__input-wrapper.card__input-wrapper-expanded
                .card__input-dropdown.card__input-filter-date 2 спальни, 2 кровати...
                span.material-icons.material-icons-expand expand_more
              .elements__item_content
        .column
          .elements__item
            .information__item 
              img.information__icon(src="img/icons/insert_emoticon.png", alt="icon")
              .information__item-inner 
                .information__title Комфорт
                .information__text Шумопоглощающие стены
            .information__item 
              img.information__icon(src="img/icons/location_city.png", alt="icon")
              .information__item-inner
                .information__title Удобство
                .information__text Окно в каждой из спален

      .container.form-elements-inner-3  
            
        .column-2
          .reviews
            .review 
              .review__name Мурад Сарафанов
              .review__date 5 дней назад
              .review__avatar 
                img.review__avatar_image(src="img/avatar-1.png", alt="avatar")
              .review__text Великолепный матрас на кровати в основной спальне! А пуфик вообще потрясающий. И стены, действительно, шум

    script(src='form-elements.js')