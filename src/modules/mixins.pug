mixin text-field-default(title, status, placeholder)
  .text-field-default.elements__item
    .elements__item_header
      h3.h3=title 
      span.elements__item_state=status
    input.card__input(type="text" placeholder=placeholder)

mixin text-field-hover(title, status, placeholder)
  .text-field-hover.elements__item 
    .elements__item_header
      h3.h3=title  
      span.elements__item_state=status
    input.card__input.card__input-hover(type="text" placeholder=placeholder)

mixin dropdown
  <div class="iqdropdown">
    <p class="iqdropdown-selection"></p>
    <div class="iqdropdown-menu">
      <div class="iqdropdown-menu-option" data-id="item1">
        <div>
          <p class="iqdropdown-item">Item 1</p>
          <p class="iqdropdown-description">A short description</p>
        </div>
      </div>
      <div class="iqdropdown-menu-option" data-id="item2">
        <div>
          <p class="iqdropdown-item">Item 2</p>
          <p class="iqdropdown-description">A short description</p>
        </div>
      </div>
      <div class="iqdropdown-menu-option" data-id="item3">
        <div>
          <p class="iqdropdown-item">Item 3</p>
          <p class="iqdropdown-description">A short description</p>
        </div>
      </div>
    </div>
  </div>
  .dropdown.elements__item 
    .elements__item_header
      h3.h3=title
    .card__input-wrapper 
      .card__input-dropdown.card__input-dropdown-pre-default=inputText
      span.material-icons.material-icons-expand expand_more

mixin radiobuttons(title)
  .radiobuttons.elements__item 
    .elements__item_header.radiobuttons__header
      h3.h3=title 
    .radiobutton-wrapper 
      p.radiobutton__item
        input.input#test1(type='radio' name='radio-group' checked='')
        label.radiobutton__item_label(for='test1') Мужчина
      p.radiobutton__item
        input.input#test2(type='radio' name='radio-group')
        label.radiobutton__item_label(for='test2') Женщина

mixin masked-text-field(title)
  .masked-text-field.elements__item 
    .elements__item_header
      h3.h3=title
    input.card__input.card__input-masked(type="text" placeholder="ДД.ММ.ГГГГ")

mixin toggle(text)
  .toggle.elements__item 
    .toggle__item 
      label.switch   
        input(type="checkbox")
        span.slider.round
      span=text

mixin date-dropdown(title)
  //- .date-dropdown-wrapper
  .date-dropwown.elements__item.elements__item-box
    .elements__item_header
      h3.h3=title 
    .card__input-wrapper
      input.card__input-date-dropdown.calendar
