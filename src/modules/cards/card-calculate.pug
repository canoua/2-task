include ../date-dropdown/date-dropdown.pug
include ../buttons/button-gradient-arrow.pug

mixin card-calculate
  form(action="#")
    .card 
      .card-inner 
        .date-dropdown-wrapper
          +date-dropdown('прибытие', '19.08.2019')
          +date-dropdown('выезд', '23.08.2019')
        +dropdown('гости', '3 гостя', '')
        +btn-gradient-arrow('card-btn-landing', 'забронировать')
        
